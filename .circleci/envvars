
if [[ -n "${CIRCLE_TAG:-}" ]]; then
  VERSION="${CIRCLE_TAG}"
  BUILD_METADATA=""
else
  VERSION="$(sed -n 's/[[:blank:]]Version[[:blank:]]*=[[:blank:]]*"\(.*\)"/\1/p' pkg/version/version.go)"
  BUILD_METADATA="build.${CIRCLE_BUILD_NUM:-0}"
fi


IMG=gcr.io/${GOOGLE_PROJECT_ID}/cordelia:${VERSION}
if [[ -n "${BUILD_METADATA}" ]]; then
  IMG="${IMG}+${BUILD_METADATA}"
fi


export VERSION
export BUILD_METADATA
export IMG
